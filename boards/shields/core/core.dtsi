#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <zephyr/dt-bindings/pinctrl/nrf-pinctrl.h>

/ {
    chosen {
        zmk,kscan = &default_kscan;
        zmk,matrix_transform = &default_transform;
    };

    /* Key scan direct wiring */
    default_kscan: kscan {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios =
            <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D1
            <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D0
            <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D2
            <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D3
            <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D4
            <&gpio0  9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D5
            <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D6
            <&gpio0  2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D7
            <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;  // D8
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(0,3) RC(0,4) RC(0,5)
            RC(0,6) RC(0,7) RC(0,8)
        >;
    };

    key_physical_attrs: key_physical_attrs {
        compatible = "zmk,key-physical-attrs";
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Core Layout";
        kscan = <&default_kscan>;
        transform = <&default_transform>;

        keys =
            <&key_physical_attrs 100 100    0    0 0 0 0>,
            <&key_physical_attrs 100 100  100    0 0 0 0>,
            <&key_physical_attrs 100 100  200    0 0 0 0>,
            <&key_physical_attrs 100 100    0  100 0 0 0>,
            <&key_physical_attrs 100 100  100  100 0 0 0>,
            <&key_physical_attrs 100 100  200  100 0 0 0>,
            <&key_physical_attrs 100 100    0  200 0 0 0>,
            <&key_physical_attrs 100 100  100  200 0 0 0>,
            <&key_physical_attrs 100 100  200  200 0 0 0>;
    };

    /* Encoder */
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio1  6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0  9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "okay";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <20>;
    };
};

/* ---- I2C FIX ---- */
&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 26)>, /* SDA */
                    <NRF_PSEL(TWIM_SCL, 0, 27)>; /* SCL */
            bias-pull-up;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 26)>,
                    <NRF_PSEL(TWIM_SCL, 0, 27)>;
        };
    };
};

&i2c0 {
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    status = "okay";
};
