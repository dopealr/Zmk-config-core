#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    // --- Key Scan (9 switches, GPIO direct) ---
    default_kscan: kscan {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios =
            <&pro_micro 1  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D1
            <&pro_micro 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D0
            <&pro_micro 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D3
            <&pro_micro 3  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D4
            <&pro_micro 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D5
            <&pro_micro 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D6
            <&pro_micro 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D7
            <&pro_micro 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // D8
            <&pro_micro 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>; // D2
    };

    // --- Matrix transform ---
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(0,3) RC(0,4) RC(0,5)
            RC(0,6) RC(0,7) RC(0,8)
        >;
    };

    // --- Physical Layout ---
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Core Layout";

        kscan = <&default_kscan>;
        transform = <&default_transform>;

        keys =
            <&key_physical_attrs 100 100    0    0 0 0 0>,
            <&key_physical_attrs 100 100  100    0 0 0 0>,
            <&key_physical_attrs 100 100  200    0 0 0 0>,
            <&key_physical_attrs 100 100    0  100 0 0 0>,
            <&key_physical_attrs 100 100  100  100 0 0 0>,
            <&key_physical_attrs 100 100  200  100 0 0 0>,
            <&key_physical_attrs 100 100    0  200 0 0 0>,
            <&key_physical_attrs 100 100  100  200 0 0 0>,
            <&key_physical_attrs 100 100  200  200 0 0 0>;
    };

    // --- EC11 Encoder ---
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;   // D9
        b-gpios = <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;   // D10
        steps = <20>;
        status = "okay";
    };

    // --- Sensor node ---
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <4>;
    };
};

// --- Disable unused peripherals ---
&i2c0 {
    status = "disabled";
};

&spi0 {
    status = "disabled";
};

&spi1 {
    status = "disabled";
};

// --- Remove the problematic i2c0_default node ---
/delete-node/ &i2c0_default;