#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
        zmk,physical-layout = &physical_layout0;
    };

    // Key scan wiring (direct GPIO)
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios =
            <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 0
            <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 1
            <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 2
            <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 3
            <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 4
            <&gpio0  9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 5
            <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 6
            <&gpio0  2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Key 7
            <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>; // Key 8
    };

    // Matrix transform (1 row Ã— 9 columns)
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(0,3) RC(0,4) RC(0,5)
            RC(0,6) RC(0,7) RC(0,8)
        >;
    };

    // Physical layout for ZMK Studio
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Core Layout";
        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys  //                     w    h    x    y   rot   rx   ry
            = <&key_physical_attrs 100 100    0    0     0    0    0> // Key 0
            , <&key_physical_attrs 100 100  100    0     0    0    0> // Key 1
            , <&key_physical_attrs 100 100  200    0     0    0    0> // Key 2
            , <&key_physical_attrs 100 100    0  100     0    0    0> // Key 3
            , <&key_physical_attrs 100 100  100  100     0    0    0> // Key 4
            , <&key_physical_attrs 100 100  200  100     0    0    0> // Key 5
            , <&key_physical_attrs 100 100    0  200     0    0    0> // Key 6
            , <&key_physical_attrs 100 100  100  200     0    0    0> // Key 7
            , <&key_physical_attrs 100 100  200  200     0    0    0> // Key 8
            ;
    };

    // Left rotary encoder (EC11)
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio1  6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Encoder A
        b-gpios = <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Encoder B
        steps = <80>;  // pulses per revolution
        status = "okay";
    };

    // Register encoder as sensor
    sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
    };
};
