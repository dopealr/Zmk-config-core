#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    default_kscan: kscan {
    compatible = "zmk,kscan-gpio-direct";
    label = "default_kscan";

    input-gpios =
        <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
        <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
};

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <9>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(0,5) RC(0,6) RC(0,7) RC(0,8)
        >;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Core Layout";

        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys =
            <&key_physical_attrs 100 100    0    0 0 0 0>,   /* Switch 1 */
            <&key_physical_attrs 100 100  100    0 0 0 0>,   /* Switch 2 */
            <&key_physical_attrs 100 100  200    0 0 0 0>,   /* Switch 3 */
            <&key_physical_attrs 100 100    0  100 0 0 0>,   /* Switch 4 */
            <&key_physical_attrs 100 100  100  100 0 0 0>,   /* Switch 5 */
            <&key_physical_attrs 100 100  200  100 0 0 0>,   /* Switch 6 */
            <&key_physical_attrs 100 100    0  200 0 0 0>,   /* Switch 7 */
            <&key_physical_attrs 100 100  100  200 0 0 0>,   /* Switch 8 */
            <&key_physical_attrs 100 100  200  200 0 0 0>;   /* Switch 9 */
    };
};
